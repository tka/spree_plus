<%= form_for :order, :url => populate_orders_url do |f| %>
    <div data-hook="inside_product_cart_form">

        <% if @product.price %>
            <div data-hook="product_price">
                <dl id="product-price">
                    <dt><%= t(:price) %></dt>
                    <dd><span class="price selling"><%= product_price(@product) %></span></dd>
                </dl>
            </div>
        <% end %>

        <% if @product.has_variants? %>
            <div id="product-variants">
                <h2><%= t(:variants) %></h2>
                <ul class="option_tyeps" id="product_option_types">
                    <% @product.option_types.each do |option_type| %>

                        <li><label><%=option_type.presentation%></label>
                            <% if option_type.display_type == "select" %>
                                <% option_type.option_values.each do |option_value|%>
                                <% end %>
                            <% else %> 
                                <ul>
                                <% option_type.option_values.each do |option_value|%>
                                    <li><label>
                                            <%= radio_button_tag "option_type_#{option_type.id}",option_value.id, (params[:option_types] && params[:option_types][option_type.id.to_s] == option_value.id.to_s), :"data-has-same-product-image" => option_type.has_same_product_image%><span><%=image_tag option_value.image.mini_url if option_value.image%><%=option_value.presentation%></span></label></li>
                                <% end %>
                                </ul>
                            <% end %>
                        </li>
                    <% end %>
                </ul>
                <ul>
                    <% has_checked = false
                    @product.variants.active.each_with_index do |v,index|
                        next if v.option_values.empty? || (!v.in_stock && !Spree::Config[:show_zero_stock_products])
                        checked = !has_checked && (v.in_stock || Spree::Config[:allow_backorders])
                        has_checked = true if checked %>
                        <li>
                            <%=raw radio_button_tag( "products[#{@product.id}]", v.id, checked, :disabled => !v.in_stock && !Spree::Config[:allow_backorders], :"data-on-hand" => v.on_hand).gsub(/>$/, variant_option_values_data(v)+">") %>
                            <label for="<%= ['products', @product.id, v.id].join('_') %>">
                                <span class="variant-description">
                                    <%= variant_options v %>
                                </span>
                                <% if variant_price_diff v %>
                                    <span class="price diff"><%= variant_price_diff v %></span>
                                <% end %>
                            </label>
                        </li>
                    <% end%>
                </ul>
            </div>
        <% end%>
        <% if @product.has_stock? || Spree::Config[:allow_backorders] %>
            <%= text_field_tag (@product.has_variants? ? :quantity : "variants[#{@product.master.id}]"),
                1, :class => 'title', :size => 3 %>
                &nbsp;
                <%= button_tag :class => 'large primary', :id => 'add-to-cart-button' do %>
                    <%= image_tag('icons/add-to-cart.png') + t(:add_to_cart) %>
                <% end %>
            <% else %>
                <%= content_tag('strong', t(:out_of_stock)) %>
            <% end %>

        </div>
    <% end %>
