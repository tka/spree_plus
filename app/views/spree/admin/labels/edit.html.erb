<%= render :partial => 'spree/admin/shared/product_sub_menu' %>

<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @label } %>

<%= form_for @label, :url => admin_label_path(@label) do |f| %>
    <fieldset>
        <legend><%= t(:Edit_label) %></legend>
        <%= render :partial => 'form', :locals => { :f => f } %>
        <p class="form-buttons" data-hook="buttons">
            <%= button t(:update) %> <%= t(:or) %> <%= link_to t(:cancel), :back %>
        </p>

    </fieldset>
<% end %>
