<%= form_for :user, :url => spree.user_session_path, :html => {:class => "custom-form"} do |f| %>
    <div class="field">
        <%= f.label :email, t(:email), :class => 'desc' %>
        <div class="col">
            <%= f.email_field :email, :size => "30" %>
        </div>
    </div>
    <div class="field">
        <%= f.label :password, t(:password), :class => 'desc' %>
        <div class="col">
            <%= f.password_field :password, :size => "30" %>
        </div>
    </div>
    <div class="field">
        <div class="col remember">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, t(:remember_me) %>
        </div>
    </div>

    <div class="button-area">
        <%= f.submit t(:log_in), :class => 'submit button-gray' %>
        <%= t(:or) %> <%= link_to t(:create_a_new_account), spree.signup_path %> | <%= link_to t(:forgot_password), spree.new_user_password_path %>
    </div>
<% end %>
